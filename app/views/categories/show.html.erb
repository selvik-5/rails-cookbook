<div class="banner" style="background-image: url('<%= image_path "banner.jpg" %>')">
  <div >
    <h1><%= @category.name %></h1>
  </div>
</div>

<div class="container w-75">
<div class="info-top">
    <h2>Recipes</h2>
    <%= link_to 'Add a recipe', new_category_bookmark_path(@category), class:"btn btn-warning"%>
  </div>
  <div class="cards">

  <% @category.bookmarks.each do |bookmark|%>
  <div class="card-trip">
  <img src="<%= bookmark.recipe.image_url %>" />
  <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn-delete' %>
  </div class="card-trip-description">
  <h3><%= bookmark.recipe.name %></h3>
<p><%= bookmark.recipe.description.truncate(100) %></p>

  </div>
</div>
<h1><%= @category.name %></h1>
<ul>
<% @category.bookmarks.each do |bookmark|%>
<li>
<h3><%= bookmark.recipe.name %></h3>
<p><%= bookmark.recipe.description %></p>
<%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
</li>
<% end %>
</ul>
